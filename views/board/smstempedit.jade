extends ../board
block board
    form#smsTempForm.form-horizontal(method="post", action="/api/post/smstempedit")
        div.control-group
            label.control-label(for="smsTempName") Name
            div.controls
                input#smsTempName(type="text", placeholder="Name", name="name", value="#{smsTemplate.name}", readonly)
        div.control-group
            label.control-label(for="smsTempDesc") Desc
            div.controls
                input#smsTempDesc(type="text", placeholder="Desc", name="desc", value="#{smsTemplate.desc}")
        div.control-group
            label.control-label(for="smsTempCon") Content
            div.controls
                textarea#smsTempCon.span4(cols="80", rows="5", name="temp") #{smsTemplate.temp}
        input#smsEditAction(type="hidden", name="action", value="edit")
        div.control-group
            div.controls.btn-group
                button.btn.sms-temp-edit(type="submit") Submit
                button.btn.btn-danger.sms-temp-delete Delete
    script(src="/js/board/smseditor.js")