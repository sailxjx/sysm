extends ../../layout
block stylesheet
    link(href="/css/admin.css", rel="stylesheet")
block content
    form#reg-form.form-horizontal.reg-form(method="get", action="/api/reg")
        div.control-group
            label.control-label(for="inputUserName") UserName
            div.controls
                input#inputUserName(type="text", placeholder="UserName", name="user[name]", required)
        div.control-group
            label.control-label(for="inputPassword") Password
            div.controls
                input#inputPassword(type="password", placeholder="Password", name="user[pwd]", required)
        div.control-group
            label.control-label(for="inputPassword") Password Comfirm
            div.controls
                input#inputPassword(type="password", placeholder="Password", name="user[pwdrepeat]", required)
        div.control-group
            label.control-label(for="selectRole") Role
            div.controls
                select#selectRole.chzn-select(name="user[role]")
                    option(value="admin") admin
                    option(value="user") user
        div.control-group
            div.controls
                button.btn(type="submit") Sign In
                span#subTip.help-inline
block script
    script(src="/libjs/jquery.form.js")
    script(src="/js/admin.js")