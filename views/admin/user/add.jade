extends ../../layout
block stylesheet
    link(href="/css/admin.css", rel="stylesheet")
block content
    form#reg-form.form-horizontal.reg-form(method="get", action="/openapi/reg")
        div.control-group
            label.control-label(for="inputUserName") UserName
            div.controls
                input#inputUserName(type="text", placeholder="UserName", name="user[name]", required)
        div.control-group
            label.control-label(for="inputPassword") Password
            div.controls
                input#inputPassword(type="password", placeholder="Password", name="user[pwd]", required)
        div.control-group
            label.control-label(for="inputPassword") Password Comfirm
            div.controls
                input#inputPassword(type="password", placeholder="Password", name="user[pwd2]", required)
        div.control-group
            div.controls
                button.btn(type="submit") Sign In
block script
    script(src="/libjs/jquery.form.js")
    script(src="/js/admin.js")