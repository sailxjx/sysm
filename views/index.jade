extends layout
block stylesheet
    link(href="#{baseDomain}/css/index.css", rel="stylesheet")
block content
    div#popback.popback
        div#popen.popen
    div.container
        - for(var i in boards) {
        -   if (boards[i].target) {
        div(class="board bp board-#{boards[i].size}", board="#{boards[i].name}", target-url="#{baseDomain}/board/#{boards[i].target}")
        -   }else{
        div(class="board board-#{boards[i].size}", board="#{boards[i].name}")
        -   }
        - }
block script
    script(src='#{baseDomain}/js/index.js')
